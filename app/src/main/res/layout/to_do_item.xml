<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="80dp"
    android:layout_marginBottom="5dp">

    <!-- icon -->
    <TextView
        android:id="@+id/to_do_address"
        android:layout_width="520dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="1dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="45dp" />

    <!-- title -->
    <TextView
        android:id="@+id/to_do_description"
        android:layout_width="520dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/to_do_address"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/to_do_address"
        android:textColor="@android:color/black"
        android:textSize="22dp"
        tools:layout_marginRight="80dp" />

    <ImageView
        android:id="@+id/status_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="550dp"
        android:layout_marginTop="20dp"
        android:background="@mipmap/ic_done_black_24dp"
        android:contentDescription="done" />

</android.support.v7.widget.CardView>